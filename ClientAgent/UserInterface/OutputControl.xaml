<UserControl x:Class="UserInterface.OutputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Vertical" Height="30">
        <Polygon Points="0 0, 15 8, 0 15" Stroke="Orange" Fill="Yellow" HorizontalAlignment="Left"/>
        <Label x:Name="lblDesc" Content="{Binding Path=Description}" FontSize="10" Padding="1" HorizontalContentAlignment="Left"  Foreground="White"/>
    </StackPanel>
</UserControl>
