<UserControl x:Class="UserInterface.OutputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UserInterface">
    <StackPanel Orientation="Vertical" Height="30">
        <local:Triangle Size="15" Stroke="Orange" Fill="Yellow" HorizontalAlignment="Left"/>
        <Label x:Name="lblDesc" Content="{Binding Path=Description}" FontSize="10" Padding="0" HorizontalContentAlignment="Left"  Foreground="White"/>
    </StackPanel>
</UserControl>
